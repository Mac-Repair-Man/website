---
import "../styles/Footer.css";

import { FaPhone, FaEnvelope, FaHome } from "react-icons/fa";
import { Image } from "astro:assets";

import logoImage from "../images/logo.png";
---

<footer class="footer-area">
    <div class="footer-top-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 footer-box-item">
                    <div class="footer-content">
                        <Image src={logoImage} alt="Brand" loading="eager" />
                        <p>
                            For fast, high-quality, and affordable Mac
                            repairs, contact Mac Repair Man.
                        </p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 footer-box-item">
                    <div class="footer-content mid-content">
                        <h3>Links</h3>
                        <ul class="footer-link">
                            <li><a href="/#about">About Us</a></li>
                            <li><a href="/services">Our Services</a></li>
                            <li><a href="/contact">Contact Us</a></li>
                            <li><a href="/terms">Terms & Conditions</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 footer-box-item">
                    <div class="footer-content">
                        <h3>Contact Us</h3>
                        <ul class="footer-link">
                            <li>
                                <FaPhone size={20} color="#c42228"/>
                                {" "}
                                <a href="tel:5195050058">(519) 505-0058</a>
                            </li>
                            <li>
                                <FaEnvelope size={20} color="#c42228"/>
                                {" "}
                                <a href="mailto:info@macrepairman.ca">info@macrepairman.ca</a>
                            </li>
                            <li>
                                <FaHome size={20} color="#c42228"/>
                                {" "}
                                556 King St East, Kitchener ON, Canada
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer-bottom-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="footer-copyright text-center">
                        <p>&copy; 2014 - 2024 Mac Repair Man. All Rights Reserved.</p>
                        <p>Website Designed & Maintained by the <a href="https://github.com/Mac-Repair-Man">Mac Repair Team</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>